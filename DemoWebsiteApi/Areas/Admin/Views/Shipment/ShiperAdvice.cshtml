@using DemoWebsite.Models.Models
@model List<ShiperAdvice>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-6">
            <h2 class="text-primary">Shiper Advice List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Shipment" asp-action="AddAdvice" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Add New Advice
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table id="tblData" class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Tracking Number</th>
                    <th>Shipment Status</th>
                    <th>Advice</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- DataTables will populate the table body -->
            </tbody>
        </table>
    </div>
</div>

@section scripts {
    <script src="~/js/shiper.js"></script>
    <script src="js/Script.js"></script>
}

