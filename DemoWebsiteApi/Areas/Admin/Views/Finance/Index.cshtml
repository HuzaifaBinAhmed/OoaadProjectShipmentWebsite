<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - DemoWebsiteApi</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-5F2JKoCpSxP3ixw8F9FzO3ZC/6A77RYTzv4mRQgaRQZQ1/yZxXHctb8iR2M4r9O" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4C+6ypt4J3D5+gZlZ9Qs7JdfbRymYP0A+bIC/0mi4hd/S3eT0s3O91KOkE7ebOsBr8KFA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />

    <!-- Inline Styles (Optional) -->
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            max-width: 960px;
        }

        .card {
            border-radius: 0.75rem;
            border: 1px solid #e3e6f0;
            box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #ffffff;
            border-bottom: 1px solid #e3e6f0;
            padding: 1.25rem;
        }

        .card-body {
            padding: 1.25rem;
        }

        .form-select,
        .form-control-file {
            border-radius: 0.375rem;
            border: 1px solid #ced4da;
            box-shadow: none;
            transition: border-color 0.2s, box-shadow 0.2s;
        }

            .form-select:focus,
            .form-control-file:focus {
                border-color: #007bff;
                box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
            }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
</head>
<body>
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 col-md-10">
                            <div class="card shadow-lg border-0 rounded-lg">
                                <div class="card-header">
                                    <h3 class="text-center font-weight-light my-4">Upload Excel File</h3>
                                </div>
                                <div class="card-body">
                                    <form asp-action="UploadExcel" asp-controller="Finance" method="post" enctype="multipart/form-data">
                                        <div class="row">
                                            <!-- Select User Dropdown -->
                                            <div class="col-md-6 mb-3">
                                                <div class="form-floating">
                                                    <label for="applicationUserId">Select User</label>
                                                    <select id="applicationUserId" name="applicationUserId" class="form-select" required>
                                                        <option value="" disabled selected>Select a user</option>
                                                        @foreach (var user in Model.Users)
                                                        {
                                                            <option value="@user.Value">@user.Text</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>

                                            <!-- File Upload Input -->
                                            <div class="col-md-6 mb-3">
                                                <div class="form-floating">
                                                    <label for="excelFile">Upload Excel File</label>
                                                    <input type="file" id="excelFile" name="excelFile" class="form-control-file" accept=".xlsx" required />
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Submit Button -->
                                        <div class="d-flex justify-content-between mt-4">
                                            <button type="submit" class="btn btn-primary rounded-pill">Upload</button>
                                            <a class="btn btn-secondary rounded-pill" asp-controller="Finance" asp-action="Index">Back to List</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-8Q3Jt5g3s1z1M6V4ZIxSHcN4P6KD7uIhE5H3WENK1y8zqXn0A2QG8JtKj88Asb" crossorigin="anonymous"></script>
    
</body>
</html>
